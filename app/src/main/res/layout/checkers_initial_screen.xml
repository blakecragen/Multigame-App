<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkersInitialScreen"
    android:background="@color/purple">

    <EditText
        android:id="@+id/checkersPLayerName"
        android:layout_width="347dp"
        android:layout_height="158dp"
        android:layout_marginTop="132dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/pressstart_2p"
        android:inputType="text"
        android:text="Enter Player Name"
        android:textAlignment="center"
        android:textColor="#190101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/characterselecttext"
        android:layout_width="374dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="336dp"
        android:ems="10"
        android:fontFamily="@font/pressstart_2p"
        android:inputType="text"
        android:text="Choose A Character!"
        android:textAlignment="center"
        android:textColor="#F4F2F2"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="355dp"
        android:layout_height="122dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="23dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterselecttext">

        <RadioButton
            android:id="@+id/foxButton"
            android:layout_marginRight="20dp"
            android:layout_width="92dp"
            android:layout_height="107dp"
            android:background="@drawable/fox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="400dp" />

        <RadioButton
            android:id="@+id/pandaButton"
            android:layout_width="91dp"
            android:layout_height="117dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/panda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="392dp" />

        <RadioButton
            android:id="@+id/turtleButton"
            android:layout_marginLeft="10dp"
            android:layout_width="96dp"
            android:layout_height="106dp"
            android:background="@drawable/turtle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="404dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/checkersHeading"
        android:layout_width="318dp"
        android:layout_height="153dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/pressstart_2p"
        android:inputType="text"
        android:text="CHECKERS!"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/toHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="564dp"
        android:fontFamily="@font/pressstart_2p"
        android:text="Home"
        app:backgroundTint="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gameStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="644dp"
        android:fontFamily="@font/pressstart_2p"
        android:text="Play Game"
        app:backgroundTint="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>